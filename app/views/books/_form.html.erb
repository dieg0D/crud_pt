<%= form_with(model: book, local: true) do |form| %>

  <div>
    <%= form.label :Nome %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :Autor %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :Descrição %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
